<h2>Add videogame</h2>

<% unless params.valid? %>
  <div class="errors">
    <h3>There was a problem with your submission</h3>
    <ul>
      <% params.error_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%=
  form_for :videogame, routes.videogames_path do
    div class: 'input' do
      label      :title
      text_field :title
    end

    div class: 'input' do
      label      :publisher
      text_field :publisher
    end

    div class: 'controls' do
      submit 'Create Videogame'
    end
  end
%>
<%= link_to 'Back', routes.videogames_path %>
